<h1>Editing <%= @page.title.titleize %></h1>

<% form_for [:admin, @page] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= select_tag "category", options_for_select(Category.all.collect {|v| [v.name.titleize, v.id]}) %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'mceEditor'%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', admin_pages_path %>